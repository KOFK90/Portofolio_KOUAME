generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// the Contact models
model Contact {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  nom         String
  email       String
  adresse     String
  objet       String
  message     String
  createdAt DateTime @default(now()) 
}
// End of the Contact models